@{
    ViewData["Title"] = "Default";
}
@model Basket

<div>
    @if (Model.Items.Count() > 0) 
    { 
        <small class="navbar-text">
            <b>Your Basket:</b>
            @Model.Items.Sum(x => x.Quantity) item(s)
            @Model.CalculateTotal().ToString("c")
        </small>
    }
    <a class="btn btn-sm btn-secondary navbar-btn" page="/Basket" asp-route-returnurl="@ViewContext.HttpContext.Request.PathAndQuery()">
        <i class="fa fa-shopping-basket"></i>
    </a>
</div>

